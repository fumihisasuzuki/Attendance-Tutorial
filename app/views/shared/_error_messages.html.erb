<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>入力エラーが<%= @user.errors.count %>件ありました。</p>
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>